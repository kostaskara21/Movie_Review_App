@model List<Movies>
@{
    ViewData["Title"] = "Home Page";
}
<section class="py-3 text-center container">
    <div class="row py-3">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Movies</h1>
            <p class="lead text-body-secondary">Something short and leading about the collection below—its contents, the creator, etc.</p>
           
        </div>
    </div>
</section>
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var movies in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@movies.Image" alt="Thumbnail" class="bd-placeholder-img card-img-top" width="100%" height="225">

                        <div class="card-body">
                            <p class="card-text">@movies.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movies.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                   
                                </div>
                            </div>
                            <small class="text-body-secondary">9 mins</small>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
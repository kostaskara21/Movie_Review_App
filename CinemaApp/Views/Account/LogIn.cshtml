@using CinemaApp.Data.Dto
@model AccountLogInDto

@{
    if (TempData["LogIn"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["LogIn"]
        </div>
    }
   
}

<form asp-action="LogIn" method="post">
    <h1>Please Sign In </h1>
    <div class="form-group">
        <label asp-for="EmailAdress">Email Address</label>
        <input asp-for="EmailAdress" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="EmailAdress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>





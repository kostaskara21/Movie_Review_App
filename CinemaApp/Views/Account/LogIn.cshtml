@using CinemaApp.Data.Dto
@model AccountLogInDto

@{
    if (TempData["LogIn"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["LogIn"]
        </div>
    }
   
}

<form asp-action="LogIn" method="post" class="mt-5 px-4">
    <h2 class="mb-4">Please Sign In</h2>

    <div class="form-group mb-3">
        <label asp-for="EmailAdress" class="form-label">Email Address</label>
        <input asp-for="EmailAdress" type="email" class="form-control" placeholder="Enter your email">
        <span asp-validation-for="EmailAdress" class="text-danger small"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Login</button>
</form>



